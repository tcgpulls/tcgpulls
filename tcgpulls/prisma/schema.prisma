datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String  @id @default(cuid())
  clerkUserId String  @unique
  email       String  @unique
  firstName   String?
  lastName    String?
  avatar      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PokemonSet {
  id             String    @id @unique
  name           String
  logo           String?
  symbol         String?
  totalCards     Int
  officialCards  Int
  language       String
  releaseDate    DateTime?
  insertionOrder Int // Field for maintaining insertion order

  @@index([language])
}
