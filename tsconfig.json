{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@tcg/scripts/*": ["packages/scripts/*"],
      "@tcg/prisma": ["packages/prisma/index.ts"],
      "@/*": ["tcgpulls/*"]
    }
  },
  "include": [
    "packages/scripts/**/*",
    "packages/prisma/**/*",
    "tcgpulls/**/*",
    "tcgpulls-admin/**/*"
  ]
}
